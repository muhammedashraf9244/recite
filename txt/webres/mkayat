#!/bin/sh
b="بسم الله الرحمن الرحيم"
s1a1="بسم الله الرحمن الرحيم (1)"
s9a1="براءة من الله ورسوله إلى الذين عاهدتم من المشركين (1)"
cat q                      \
| sed '/(/!d'              \
| sed "s/.* (1) /#&/"      \
| sed "s/^#$s1a1/$s1a1/"   \
| sed "s/^#$s9a1/$s9a1/"   \
| sed 's/\\n/\n/g'         \
| sed 's/ ([0-9]\+) /\n/g' \
| sed 's/ ([0-9]\+)//g'    \
| sed 's/^/"/;s/$/",/'     \
> imlaai-ayat-array
